<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Topjava</display-name>

    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.UserServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>mealServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.MealServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>mealServlet</servlet-name>
        <url-pattern>/meals</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>mealCrudMemoryServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.MealCrudMemoryServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>mealCrudMemoryServlet</servlet-name>
        <url-pattern>/mealcrudmemory</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>mealAddCrudMemoryServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.MealCrudAddServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>mealAddCrudMemoryServlet</servlet-name>
        <url-pattern>/add_meal</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>mealCrudMemoryUpdate</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.MealCrudupdateServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>mealCrudMemoryUpdate</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
</web-app>
